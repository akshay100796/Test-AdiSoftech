<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            tools:context=".ui.fragments.ProfileFragment">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_image_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:src="@drawable/ic_edit_circle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />



            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_image_logout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:src="@drawable/ic_logout"
                app:layout_constraintEnd_toStartOf="@id/id_image_edit"
                app:layout_constraintTop_toTopOf="parent"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/drf_mobile_no_back"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/id_text_name"
                        style="@style/style_bold_text_20_primary"
                        android:layout_margin="20dp"
                        android:text="Profile" />

                    <TextView
                        android:id="@+id/id_text_lasUpdated"
                        style="@style/style_bold_text_20_primary"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Last Updated, " />

                </LinearLayout>

                <TextView
                    android:id="@+id/id_text_mobile"
                    style="@style/style_bold_text_20_primary"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:autoLink="phone"
                    android:drawablePadding="25dp"
                    android:fontFamily="@font/jura_regular"
                    android:text="--"
                    android:textColorLink="@color/color_primary"
                    app:drawableStartCompat="@drawable/ic_mobile" />

                <TextView
                    android:id="@+id/id_text_date_of_birth"
                    style="@style/style_bold_text_20_primary"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:drawablePadding="25dp"
                    android:fontFamily="@font/jura_regular"
                    android:text="--"
                    app:drawableStartCompat="@drawable/ic_calender" />

                <TextView
                    android:id="@+id/id_text_brief"
                    style="@style/style_bold_text_20_primary"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:drawablePadding="25dp"
                    android:fontFamily="@font/jura_regular"
                    android:text="--"
                    app:drawableStartCompat="@drawable/ic_suitcase" />

                <TextView
                    android:id="@+id/id_text_amount"
                    style="@style/style_bold_text_20_primary"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:drawablePadding="25dp"
                    android:fontFamily="@font/jura_regular"
                    android:text="--"
                    app:drawableStartCompat="@drawable/ic_income" />

                <TextView
                    android:id="@+id/id_text_email"
                    style="@style/style_bold_text_20_primary"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:autoLink="email"
                    android:drawablePadding="25dp"
                    android:fontFamily="@font/jura_regular"
                    android:text="--"
                    android:textColorLink="@color/color_primary"
                    app:drawableStartCompat="@drawable/ic_email" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</layout>