<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="40dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/id_image_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:civ_border_color="@color/color_secondary"
                app:civ_border_width="2dp"
                android:translationZ="2dp"
                android:visibility="visible"
                android:src="@color/color_primary"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/id_mobile_name"
                style="@style/style_bold_text_20_primary"
                android:text="Samsung Galaxy"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/jura_bold"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/id_price"
                style="@style/style_bold_text_20_primary"
                android:text="Price : $60"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jura_regular"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/id_distance"
                style="@style/style_bold_text_20_primary"
                android:text="3.5 KM Far From You"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jura_regular"
                android:layout_gravity="center"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/id_button_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="@drawable/drf_solid_yellow"
                android:fontFamily="@font/jura_bold"
                android:text="Next"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textAllCaps="false"
                android:layout_marginTop="40dp"
                android:textColor="@color/white" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/id_button_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="@drawable/drf_solid_yellow"
                android:fontFamily="@font/jura_bold"
                android:text="Cancel"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>